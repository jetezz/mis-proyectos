---
// Layout principal con estilos globales y meta SEO
import { SUPABASE_URL, SUPABASE_ANON_KEY } from 'astro:env/server';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'OpenCode Agent', 
  description = 'Agente local de código controlado vía web con aislamiento de seguridad'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} — OpenCode Agent</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  <style is:global>
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --bg-primary: #0a0a0f;
      --bg-secondary: #111118;
      --bg-card: #16161f;
      --bg-card-hover: #1c1c28;
      --border: #2a2a3a;
      --border-focus: #5b5bf6;
      --text-primary: #f0f0ff;
      --text-secondary: #8888aa;
      --text-muted: #55556a;
      --accent: #5b5bf6;
      --accent-hover: #7070ff;
      --accent-glow: rgba(91, 91, 246, 0.3);
      --success: #22c55e;
      --danger: #ef4444;
      --warning: #f59e0b;
      --radius: 10px;
      --radius-sm: 6px;
      --radius-lg: 16px;
      --font-mono: 'JetBrains Mono', 'Fira Code', monospace;
    }

    html {
      font-family: 'Inter', system-ui, sans-serif;
      background-color: var(--bg-primary);
      color: var(--text-primary);
      min-height: 100vh;
      -webkit-font-smoothing: antialiased;
    }

    body {
      min-height: 100vh;
      background: 
        radial-gradient(ellipse at 20% 50%, rgba(91, 91, 246, 0.05) 0%, transparent 60%),
        radial-gradient(ellipse at 80% 20%, rgba(139, 92, 246, 0.04) 0%, transparent 50%),
        var(--bg-primary);
    }

    a {
      color: var(--accent);
      text-decoration: none;
      transition: color 0.2s;
    }

    a:hover {
      color: var(--accent-hover);
    }

    button {
      cursor: pointer;
      font-family: inherit;
    }

    input, textarea, select {
      font-family: inherit;
    }

    /* Scrollbar */
    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: var(--bg-secondary); }
    ::-webkit-scrollbar-thumb { background: var(--border); border-radius: 3px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--text-muted); }

    /* Utilities */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1.25rem;
      border-radius: var(--radius-sm);
      border: 1px solid transparent;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s;
      white-space: nowrap;
    }

    .btn-primary {
      background: var(--accent);
      color: white;
      border-color: var(--accent);
    }

    .btn-primary:hover {
      background: var(--accent-hover);
      border-color: var(--accent-hover);
      box-shadow: 0 0 16px var(--accent-glow);
    }

    .btn-secondary {
      background: transparent;
      color: var(--text-secondary);
      border-color: var(--border);
    }

    .btn-secondary:hover {
      background: var(--bg-card-hover);
      color: var(--text-primary);
      border-color: var(--border-focus);
    }

    .btn-danger {
      background: transparent;
      color: var(--danger);
      border-color: rgba(239, 68, 68, 0.3);
    }

    .btn-danger:hover {
      background: rgba(239, 68, 68, 0.1);
      border-color: var(--danger);
    }

    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 1.5rem;
      transition: border-color 0.2s;
    }

    .card:hover {
      border-color: rgba(91, 91, 246, 0.3);
    }

    .input {
      width: 100%;
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      color: var(--text-primary);
      padding: 0.625rem 0.875rem;
      font-size: 0.875rem;
      transition: border-color 0.2s, box-shadow 0.2s;
      outline: none;
    }

    .input:focus {
      border-color: var(--border-focus);
      box-shadow: 0 0 0 3px rgba(91, 91, 246, 0.15);
    }

    .input::placeholder {
      color: var(--text-muted);
    }

    .badge {
      display: inline-flex;
      align-items: center;
      padding: 0.2rem 0.6rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .badge-success {
      background: rgba(34, 197, 94, 0.15);
      color: var(--success);
      border: 1px solid rgba(34, 197, 94, 0.25);
    }

    .badge-accent {
      background: rgba(91, 91, 246, 0.15);
      color: var(--accent);
      border: 1px solid rgba(91, 91, 246, 0.25);
    }
  </style>
</head>
<body>
  <!-- Inyectar config Supabase server-side para el cliente browser -->
  <script is:inline define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY }}>
    window.__SUPABASE_URL__ = SUPABASE_URL;
    window.__SUPABASE_ANON_KEY__ = SUPABASE_ANON_KEY;
  </script>
  <slot />
</body>
</html>
