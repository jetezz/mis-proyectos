          localStorage.setItem(SK_AGENTS_PROJECT, JSON.stringify(agentsProject)); localStorage.setItem(SK_AGENTS_GLOBAL, JSON.stringify(agentsGlobal)); renderAgents();
        }
      });
    });
  }

