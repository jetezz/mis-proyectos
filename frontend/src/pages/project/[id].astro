  function bindEvents(el: HTMLElement) {
    el.querySelectorAll('.card-exec').forEach(btn => {
      btn.addEventListener('click', () => executeInTerminal((btn as HTMLElement).dataset.cmd!));
    });
    el.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id!;
        const type = (btn as HTMLElement).dataset.type as 'command' | 'skill' | 'agent';
        let item;
        if (type === 'command') item = commands.find(c => c.id === id);
        else if (type === 'skill') item = [...skillsProject, ...skillsGlobal].find(s => s.id === id);
        else item = [...agentsProject, ...agentsGlobal].find(a => a.id === id);
        if (item) showForm(type, item);
      });
    });
    el.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id!;
        const type = (btn as HTMLElement).dataset.type as 'command' | 'skill' | 'agent';
        if (!confirm('Â¿Eliminar este item?')) return;
